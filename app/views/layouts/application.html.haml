!!! 5
%html{:lang => I18n.locale}
  = render 'layouts/head'
  %body#site{:class => current_site.path.to_s} 
    = render 'layouts/flash', :locals => { :flash => flash } unless flash.empty?
    = render 'layouts/locales'
    = render 'layouts/pre_header'
    #main
      #header_wrapper
        #header
          = render "/sites/#{current_site.path}/logo"
      = render "/sites/#{current_site.path}/menu"
      - if is_homepage?
        #jcarousel-container
          = yield :content_carousel
      #content_wrapper
        - unless is_homepage?
          #content_header_wrapper
            #content_header
              = yield :content_header
        #content
          = yield
      #footer= render "/sites/#{current_site.path}/footer"
    = render '/layouts/login' unless current_user
