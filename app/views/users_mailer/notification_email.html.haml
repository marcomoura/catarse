%head
  %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
  %title= @notification.email_subject
%body{:style => "margin: 0;padding:0;"}
  %table#background{:border => "0", :cellpadding => "0", :cellspacing => "0", :frame => "void", :style => "margin:0; padding:0; border:0 none; border-spacing:0px 0px; border-collapse:collapse; background-color:#ccc;height:100%;", :width => "100%"}
    %tbody{:style => "margin:0; padding:0; border:0;"}
      %tr
        %td{:align => "center", :style => "margin:0; padding:0; border:0 none;", :valign => "top"}
          %table#content{:border => "0", :cellpadding => "0", :cellspacing => "0", :frame => "void", :style => "margin:0; padding:0; border:0 none; border-spacing:0px 0px; border-collapse:collapse;", :width => "600"}
            %tbody{:style => "margin:0; padding:0; border:0;"}
              %tr
                %td{:align => "left", :style => "margin:0; padding:0; border:0 none; ", :valign => "top"}
                  %table#pre_header{:border => "0", :cellpadding => "0", :cellspacing => "0", :frame => "void", :style => "margin:0; padding:0; border:0 none; border-spacing:0px 0px; border-collapse:collapse;", :width => "100%"}
                    %tbody{:style => "margin:0; padding:0; border:0;"}
                      %tr
                        %td{:style => "font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size:10px; line-height:12px; text-align:center; color:#888;"}
                          :css
                            .bar a{border:1px outset #ccc;
                            text-decoration:none;
                            background:#ddd url('http://c2892322.cdn.cloudfiles.rackspacecloud.com/company_bts-bg.png');
                            padding:4px;
                            margin:0;
                            color:black}
                            .bar a:hover{
                                border:1px solid #ccc !important; cursor:pointer;
                                }
                            .bar a:active{

                              background: #aaa !important;
                              -moz-box-shadow: inset 0 2px 2px 2px #888;
                              -webkit-box-shadow: inset 0 2px 2px 2px #888;
                              box-shadow: inset 0 2px 2px 2px #888;
                              }
                                                      .bar{:style => "font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size:10px; line-height:22px; text-align:center; color:#444;"}
                            #intro.edit= t('.intro', :site => @notification.site.in_the_name)
                            %a.weblink{:href => "#", :style => "\n                                border-radius: 3px 0 0 3px;\n                                -moz-border-radius: 3px 0 0 3px;\n                                -webkit-border-radius: 3px 0 0 3px;\n                                border:1px outset #ccc;\n                                text-decoration:none;\n                                background-color:#ddd;\n                                background:#ddd url('http://c2892322.cdn.cloudfiles.rackspacecloud.com/company_bts-bg.png');\n                                padding:4px;\n                                margin:0;\n                                color:#333\n                              "}= t('.weblink')
                            %a.whitelist{:href => "#", :style => "\n                                border:1px outset #ccc;\n                                border-left:1px solid rgba(0,0,0,0);\n                                text-decoration:none;\n                                background-color:#ddd;\n                                background:#ddd url('http://c2892322.cdn.cloudfiles.rackspacecloud.com/company_bts-bg.png');\n                                padding:4px;\n                                margin:0;\n                                border-radius:0;\n                                color:#333\n                              "}= t('.whitelist')
                            %a.forward{:href => "#", :style => "\n                                border:1px outset #ccc;\n                                border-left:1px solid rgba(0,0,0,0);\n                                text-decoration:none;\n                                background-color:#ddd;\n                                background:#ddd url('http://c2892322.cdn.cloudfiles.rackspacecloud.com/company_bts-bg.png');\n                                padding:4px;\n                                margin:0;\n                                border-radius:0;\n                                color:#333\n                              "}= t('.forward')
                            %a.unsubscribe{:href => "#", :style => "\n                                border-radius: 0 3px 3px 0;\n                                -moz-border-radius: 0 3px 3px 0;\n                                -webkit-border-radius: 0 3px 3px 0;\n                                border:1px outset #ccc;\n                                border-left:1px solid rgba(0,0,0,0);\n                                text-decoration:none;\n                                background-color:#ddd;\n                                background:#ddd url('http://c2892322.cdn.cloudfiles.rackspacecloud.com/company_bts-bg.png');\n                                padding:4px;\n                                margin:0;\n                                color:#333\n                              "}= t('.unsubscribe')
                            %br/
                            %br/
                  = render :partial => "/sites/#{@notification.site.path}/notification_email_header"
                  %table#columns{:border => "0", :cellpadding => "0", :cellspacing => "0", :frame => "void", :style => "margin:0; padding:0; border:0 none; border-spacing:0; border-collapse:collapse;", :width => "100%"}
                    %tbody{:style => "margin:0; padding:0; border:0;"}
                      %tr
                        %td#main{:align => "left", :style => "margin:0; padding:20px; border:0 none; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-size:12px; line-height:150%; background-color:#fff", :valign => "top", :width => "600"}
                          %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :frame => "void", :style => "margin:0; padding:0; border:0 none; border-spacing:0px 0px; border-collapse:collapse; font-size:15px; color:#333;", :width => "100%"}
                            %tbody{:style => "margin:0; padding:0; border:0;"}
                              %tr
                                %td{:align => "left", :style => "margin:0; border:0 none;", :valign => "top"}
                                  #paragraph.repeat{:style => "margin:0; padding:0px; border:0 none; font-size:14px; color:#666; text-align:left;"}
                                    %p{:style => "margin-top: 0px; margin-right: 0px; margin-bottom: 0px; margin-left: 0px; padding-top: 0px; padding-right: 0px; padding-bottom: 0px; padding-left: 0px; border-top-width: 0px; border-right-width: 0px; border-bottom-width: 0px; border-left-width: 0px; border-top-style: none; border-right-style: none; border-bottom-style: none; border-left-style: none; border-color: initial; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: normal; line-height: 17px; "}
                                      - if @notification.user.name
                                        = t('.hello')
                                        , #{@notification.user.name}!
                                      - else
                                        = t('.hello')
                                        \!
                                      %br/
                                      %br/
                                      = @notification.email_text.html_safe
                                      %br/
                                      %br/
                                      - if @notification.facebook_text or @notification.twitter_text
                                        %div{:style => "text-align: center;"}
                                          - if @notification.facebook_text
                                            = link_to "http://www.facebook.com/share.php?u=#{@notification.site.full_url("/projects/#{@notification.project.to_param}")}&t=#{@notification.facebook_text}&v=4", :target => :_blank do
                                              = image_tag @notification.site.full_url("/images/auth/facebook_64.png"), :title => 'Facebook', :class => 'social'
                                          - if @notification.twitter_text
                                            = link_to "http://twitter.com/?status=#{@notification.twitter_text}", :target => :_blank do
                                              = image_tag @notification.site.full_url("/images/auth/twitter_64.png"), :title => 'Twitter', :class => 'social'
                                        %br/
                                      = render :partial => "/sites/#{@notification.site.path}/notification_email_footer"
                  %table#post_footer{:border => "0", :cellpadding => "0", :cellspacing => "0", :frame => "void", :style => "margin:0; padding:0; border:0 none; border-spacing:0px 0px; border-collapse:collapse;", :width => "100%"}
                    %tbody{:style => "margin:0; padding:0; border:0;"}
                      %tr
                        %td{:align => "right", :style => "margin:0; padding:20px 0; color:#333333; font-size:11px; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; border:0 none; text-align:right;", :valign => "top"}
                          %a#whitelist{:href => "#", :style => "color: #008800 !important; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: normal; line-height: 18px; "}= t('.whitelist_long')
                          %br/
                          %br/
                          = t('.intro', :site => @notification.site.in_the_name)
                          %br/
                          = t('.unsubscribe_long')
                          ,
                          %a#unsubscribe{:href => "#", :style => "color: #008800 !important; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: normal;"}= t('click_here').downcase
                          %br/
                          %br/
                          %a{:href => "http://mailee.me/", :style => "color: #008800 !important; font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: normal; line-height: 18px; "}= t('.mailee')
